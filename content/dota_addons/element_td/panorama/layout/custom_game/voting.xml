        <Label id="EndlessLabel" text="Endless:" class="label"/>
        <DropDown id="EndlessDD" oninputsubmit="OnDropDownChanged('endless')" class="dropdown">
        </DropDown>
        <Label id="EndlessDesc" text="[endless descriptions]" class="desc"/>
      </Panel>

