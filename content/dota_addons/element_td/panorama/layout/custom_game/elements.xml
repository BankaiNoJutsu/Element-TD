<root>
  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    <include src="file://{resources}/styles/custom_game/elements.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/elements.js" /> 
  </scripts>
  <Panel hittest="false" class="BaseHud">
    <Panel hittest="true" id="Elements" onmouseover="ShowButton()" onmouseout="HideButton()">
      <Panel hittest="false"  id="ElementButtonHolder">
        <Button hittest="true" id="ElementButton" onactivate="ToggleCollapse()"/>
        <Button hittest="true" id="ElementButton2" onactivate="ToggleCollapse()"/>
      </Panel>
      <Panel hittest="false" id="ResourceLumber" class="resource">
        <Label id="Lumber"  text="Lumber" class="label"/>
        <Label id="LumberValue" text="0" class="value"/>
      </Panel>
      <Panel hittest="false" id="ResourcePureEssence" class="resource">
        <Label id="PureEssence"  text="Pure Ess." class="label"/>
        <Label id="PureEssenceValue" text="0" class="value"/>
      </Panel>
      <Panel hittest="false"  id="Secondary">
        <Panel hittest="false"  id="Divider"/>
        <Panel hittest="false"  id="ElementWater" class="element">
          <Label id="Water" text="Water" class="label"/>
          <Label id="WaterValue"  text="0" class="value"/>
        </Panel>
        <Panel hittest="false"  id="ElementFire" class="element">
          <Label id="Fire" text="Fire" class="label"/>
          <Label id="FireValue"  text="0" class="value"/>
        </Panel>
        <Panel hittest="false"  id="ElementNature" class="element">
          <Label id="Nature" text="Nature" class="label"/>
          <Label id="NatureValue"  text="0" class="value"/>
        </Panel>
        <Panel hittest="false"  id="ElementEarth" class="element">
          <Label id="Earth" text="Earth" class="label"/>
          <Label id="EarthValue"  text="0" class="value"/>
        </Panel>
        <Panel hittest="false"  id="ElementLight" class="element">
          <Label id="Light" text="Light" class="label"/>
          <Label id="LightValue"  text="0" class="value"/>
        </Panel>
        <Panel hittest="false"  id="ElementDark" class="element">
          <Label id="Dark" text="Dark" class="label"/>
          <Label id="DarkValue"  text="0" class="value"/>
        </Panel>
      </Panel>
    </Panel>
    <Label id="LumberDisplay" text="+1 Lumber"/>
  </Panel>
</root>